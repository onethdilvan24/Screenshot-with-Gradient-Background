{
    "manifest_version": 3,
    "name": "Screenshot with Gradient Background",
    "version": "1.0.0",
    "description": "Take screenshots of tabs with customizable gradient backgrounds and padding",
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Take Screenshot",
        "default_icon": {
            "16": "icons/logo16.png",
            "32": "icons/logo32.png",
            "48": "icons/logo48.png",
            "128": "icons/logo128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/logo16.png",
        "32": "icons/logo32.png",
        "48": "icons/logo48.png",
        "128": "icons/logo128.png"
    }
}